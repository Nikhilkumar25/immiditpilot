{
  "name": "immidit",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "prod:server": "cd server && NODE_ENV=production npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "start": "cd server && npm run start",
    "start:server": "cd server && npm run start",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install --legacy-peer-deps",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install --legacy-peer-deps",
    "db:migrate": "cd server && npx prisma migrate deploy",
    "db:generate": "cd server && npx prisma generate",
    "db:seed": "cd server && npm run db:seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
