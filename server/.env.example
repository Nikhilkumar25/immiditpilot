# ============ REQUIRED ============
JWT_SECRET="your-secure-jwt-secret-here"
JWT_REFRESH_SECRET="your-secure-refresh-secret-here"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN="7d"
DATABASE_URL="postgresql://user:password@localhost:5432/immidit"
PORT=3001
NODE_ENV="development"

# ============ CLIENT ============
CLIENT_URL="http://localhost:5173"

# ============ OTP ============
FASTAPI_KEY="your-fast2sms-api-key"

# ============ GOOGLE CLOUD STORAGE ============
# Required for file uploads in production
GCS_BUCKET_NAME="your-gcs-bucket-name"
GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account-key.json"

# ============ REDIS (Optional for dev, required for production) ============
# Required for scalable WebSockets and rate limiting on Cloud Run
REDIS_URL="redis://localhost:6379"
